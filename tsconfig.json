{
  "extends": "./node_modules/astro/tsconfigs/strict.json",
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
 "@/*": ["src/*"],
      "@/lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@custom-types/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
}
