<nav class="navbar">
  <ul>
      <li class="dropdown envie-dropdown">
          <a href="#" class="dropdown-toggle">Envie ▼</a>
          <ul class="dropdown-menu">
              <li><a href="../../content/envie/">Solo</a></li>
              <li><a href="/">A deux</a></li>
              <li><a href="/">Culture</a></li>
              <li><a href="/">Nature</a></li>
          </ul>
      </li>
  </ul>
</nav>

<style>
  .navbar {
    color:white;
    padding: 10px;
  }

  .navbar ul {
    list-style: none;
    padding: 0;
    margin: 0;
    
  }

  .navbar li {
    position: relative;
  }

  .navbar a {
    color: white;
    text-decoration: none;
    padding: 12px 20px;
    display: block;
  }

  .navbar a:hover {
    background-color: #fffff;
    text-decoration: underline;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    background-color: black;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    min-width: 160px;
    top: 100%;
    left: 0;
    border-radius: 5px;
    z-index: 10;
  }

  .dropdown-menu li {
    display: block;
  }

  .dropdown-menu a {
    color: white;
    padding: 10px 15px;
    display: block;
  }

  .dropdown-menu a:hover {
    color:black;
    background-color: #f1f1f1;
  }

  /* Classe pour afficher le menu */
  .dropdown-menu.show {
    display: block;
  }
</style>

<script>
  document.querySelector(".dropdown-toggle").addEventListener("click", function (e) {
    e.preventDefault(); // Empêche le lien de recharger la page
    document.querySelector(".dropdown-menu").classList.toggle("show");
  });

  // Ferme le menu si on clique en dehors
  window.addEventListener("click", function (e) {
    if (!document.querySelector(".dropdown").contains(e.target)) {
      document.querySelector(".dropdown-menu").classList.remove("show");
    }
  });
</script>
