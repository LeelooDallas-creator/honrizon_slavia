---
// ============================================
// CONTACT FORM COMPONENT
// ============================================
---

<form
  class="contact-form"
  method="POST"
  action="/api/contact"
  aria-label="Formulaire de contact"
>
  <p class="form-legend">
    <span class="required-indicator">*</span> Champs obligatoires
  </p>

  <div class="form-row">
    <div class="form-group">
      <label for="lastname">
        Nom <span aria-label="champ requis">*</span>
      </label>
      <input
        type="text"
        id="lastname"
        name="lastname"
        required
        placeholder="Votre nom"
        aria-required="true"
        aria-describedby="lastname-error"
      />
      <span id="lastname-error" class="error-message" role="alert" aria-live="polite"></span>
    </div>

    <div class="form-group">
      <label for="firstname">
        Prénom <span aria-label="champ requis">*</span>
      </label>
      <input
        type="text"
        id="firstname"
        name="firstname"
        required
        placeholder="Votre prénom"
        aria-required="true"
        aria-describedby="firstname-error"
      />
      <span id="firstname-error" class="error-message" role="alert" aria-live="polite"></span>
    </div>
  </div>

  <div class="form-group">
    <label for="email">
      Email <span aria-label="champ requis">*</span>
    </label>
    <input
      type="email"
      id="email"
      name="email"
      required
      placeholder="votre@email.com"
      aria-required="true"
      aria-describedby="email-error"
      autocomplete="email"
    />
    <span id="email-error" class="error-message" role="alert" aria-live="polite"></span>
  </div>

  <div class="form-group">
    <label for="subject">
      Sujet <span aria-label="champ requis">*</span>
    </label>
    <input
      type="text"
      id="subject"
      name="subject"
      required
      placeholder="Sujet de votre message"
      aria-required="true"
      aria-describedby="subject-error"
    />
    <span id="subject-error" class="error-message" role="alert" aria-live="polite"></span>
  </div>

  <div class="form-group">
    <label for="message">
      Message <span aria-label="champ requis">*</span>
    </label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      placeholder="Votre message..."
      aria-required="true"
      aria-describedby="message-error"
    ></textarea>
    <span id="message-error" class="error-message" role="alert" aria-live="polite"></span>
  </div>

  <!-- RGPD Compliance -->
  <div class="form-group consent-group">
    <label class="checkbox-label">
      <input
        type="checkbox"
        id="consent"
        name="consent"
        required
        aria-required="true"
        aria-describedby="consent-description"
      />
      <span>
        J'accepte que mes données personnelles soient traitées conformément à la
        <a href="/mentions-legales" target="_blank" rel="noopener noreferrer" class="consent-link">
          politique de confidentialité
        </a>
        <span aria-label="champ requis">*</span>
      </span>
    </label>
    <p id="consent-description" class="consent-description">
      Vos données seront utilisées uniquement pour répondre à votre demande et ne seront pas partagées avec des tiers.
    </p>
    <span id="consent-error" class="error-message" role="alert" aria-live="polite"></span>
  </div>

  <div class="form-status" role="status" aria-live="polite" aria-atomic="true"></div>

  <button
    type="submit"
    class="form-submit"
    aria-label="Envoyer le formulaire de contact"
  >
    Envoyer
  </button>
</form>

<script>
  // ============================================
  // CLIENT-SIDE VALIDATION & FORM HANDLING
  // ============================================

  const form = document.querySelector('.contact-form') as HTMLFormElement;
  const submitButton = form?.querySelector('.form-submit') as HTMLButtonElement;
  const statusDiv = form?.querySelector('.form-status') as HTMLDivElement;

  if (form) {
    // Real-time validation
    const inputs = form.querySelectorAll('input, textarea');
    inputs.forEach(input => {
      input.addEventListener('blur', (e) => {
        const target = e.target as HTMLInputElement | HTMLTextAreaElement;
        validateField(target);
      });

      input.addEventListener('input', (e) => {
        const target = e.target as HTMLInputElement | HTMLTextAreaElement;
        if (target.getAttribute('aria-invalid') === 'true') {
          validateField(target);
        }
      });
    });

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Validate all fields
      let isValid = true;
      inputs.forEach(input => {
        if (!validateField(input as HTMLInputElement | HTMLTextAreaElement)) {
          isValid = false;
        }
      });

      if (!isValid) {
        statusDiv.textContent = 'Veuillez corriger les erreurs avant de soumettre le formulaire.';
        statusDiv.className = 'form-status error';
        return;
      }

      // Disable submit button
      submitButton.disabled = true;
      submitButton.textContent = 'Envoi en cours...';
      statusDiv.textContent = '';

      try {
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          statusDiv.textContent = 'Message envoyé avec succès ! Nous vous répondrons dans les plus brefs délais.';
          statusDiv.className = 'form-status success';
          form.reset();

          // Reset ARIA attributes
          inputs.forEach(input => {
            const inputEl = input as HTMLInputElement | HTMLTextAreaElement;
            inputEl.setAttribute('aria-invalid', 'false');
            const errorSpan = document.getElementById(`${inputEl.id}-error`);
            if (errorSpan) errorSpan.textContent = '';
          });
        } else {
          const error = await response.json();
          throw new Error(error.message || 'Erreur lors de l\'envoi du message');
        }
      } catch {
        statusDiv.textContent = error instanceof Error ? error.message : 'Une erreur est survenue. Veuillez réessayer.';
        statusDiv.className = 'form-status error';
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = 'Envoyer';
      }
    });
  }

  function validateField(field: HTMLInputElement | HTMLTextAreaElement): boolean {
    const errorSpan = document.getElementById(`${field.id}-error`);
    if (!errorSpan) return true;

    let errorMessage = '';

    // Required field check
    if (field.hasAttribute('required') && !field.value.trim()) {
      errorMessage = 'Ce champ est obligatoire.';
    }
    // Email validation
    else if (field.type === 'email' && field.value) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(field.value)) {
        errorMessage = 'Veuillez saisir une adresse email valide.';
      }
    }
    // Checkbox validation (consent)
    else if (field.type === 'checkbox' && field.hasAttribute('required')) {
      if (!(field as HTMLInputElement).checked) {
        errorMessage = 'Vous devez accepter la politique de confidentialité.';
      }
    }

    // Update UI
    if (errorMessage) {
      errorSpan.textContent = errorMessage;
      field.setAttribute('aria-invalid', 'true');
      return false;
    } else {
      errorSpan.textContent = '';
      field.setAttribute('aria-invalid', 'false');
      return true;
    }
  }
</script>

<style lang="scss">
  @use '@styles/abstracts/variables' as *;
  @use '@styles/abstracts/mixins' as *;

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .form-legend {
    color: $color-white;
    font-size: $font-size-xs;
    margin: 0 0 0.5rem 0;
    opacity: 0.9;

    .required-indicator {
      color: $color-accent;
      font-weight: bold;
    }
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    color: $color-white;
    font-weight: 600;
    letter-spacing: 0.5px;

    span[aria-label] {
      color: $color-accent;
    }
  }

  input,
  textarea {
    padding: 0.875rem 1rem;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    color: $color-white;
    font-family: inherit;
    transition: all 0.3s ease;

    &::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }

    &:focus {
      outline: none;
      border-color: $color-accent;
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 0 0 3px rgba(196, 160, 0, 0.1);
    }

    &:focus-visible {
      outline: 2px solid $color-accent;
      outline-offset: 2px;
    }

    &:hover:not(:focus) {
      border-color: rgba(255, 255, 255, 0.3);
    }

    &:invalid:not(:placeholder-shown) {
      border-color: #ff6b6b;
    }
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  .error-message {
    color: #ff6b6b;
    min-height: 1rem;
    display: block;
  }

  .form-submit {
    padding: 1rem 2rem;
    background: $color-accent;
    color: $color-primary;
    border: none;
    border-radius: 0.5rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 0.5rem;

    &:hover {
      background: lighten($color-accent, 10%);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(196, 160, 0, 0.3);
    }

    &:focus-visible {
      outline: 3px solid $color-white;
      outline-offset: 3px;
    }

    &:active {
      transform: translateY(0);
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }

  // RGPD Consent Checkbox Styles
  .consent-group {
    background: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    cursor: pointer;
    font-weight: 400;

    input[type="checkbox"] {
      margin-top: 0.25rem;
      width: 1.25rem;
      height: 1.25rem;
      cursor: pointer;
      accent-color: $color-accent;
      flex-shrink: 0;

      &:focus-visible {
        outline: 2px solid $color-accent;
        outline-offset: 2px;
      }
    }

    span {
      color: $color-white;
      line-height: 1.6;
    }
  }

  .consent-link {
    color: $color-accent;
    text-decoration: underline;
    transition: color 0.2s ease;

    &:hover {
      color: lighten($color-accent, 15%);
    }

    &:focus-visible {
      outline: 2px solid $color-accent;
      outline-offset: 2px;
      border-radius: 2px;
    }
  }

  .consent-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: $font-size-xs;
    margin: 0.5rem 0 0 2rem;
    line-height: 1.5;
  }

  // Form Status Messages
  .form-status {
    padding: 1rem;
    border-radius: 0.5rem;
    text-align: center;
    font-weight: 600;
    min-height: 1rem;

    &.success {
      background: rgba(76, 175, 80, 0.2);
      border: 1px solid rgba(76, 175, 80, 0.5);
      color: #4caf50;
    }

    &.error {
      background: rgba(255, 107, 107, 0.2);
      border: 1px solid rgba(255, 107, 107, 0.5);
      color: #ff6b6b;
    }
  }

  // Support pour prefers-reduced-motion
  @media (prefers-reduced-motion: reduce) {
    input,
    textarea,
    .form-submit,
    .consent-link {
      transition: none;
    }

    .form-submit:hover {
      transform: none;
    }
  }
</style>
