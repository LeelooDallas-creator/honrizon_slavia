---
// ============================================
// BUTTON COMPONENT
// ============================================
import type { ButtonProps } from './Button.types';

const {
  text,
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  fullWidth = false,
  ariaLabel,
  dataAttributes,
} = Astro.props as ButtonProps;

// Générer les classes CSS
const classes = [
  'btn',
  `btn--${variant}`,
  `btn--${size}`,
  fullWidth && 'btn--full-width',
].filter(Boolean).join(' ');
---

  <button
    type={type}
    class={classes}
    disabled={disabled}
    aria-label={ariaLabel || text}
    {...dataAttributes}
  >
    {text}
  </button>

<style lang="scss">
  @use './Button.styles.scss';
</style>