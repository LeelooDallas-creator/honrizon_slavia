---
import type { DropdownItemProps } from "@custom-types/DropdownItemType";
import { Picture } from "astro:assets";

const { image, description, subtitle } = Astro.props as DropdownItemProps;
---

<div class="card-container">
  <div class="card">
    <div class="card-front">
      <Picture
        src={image}
        alt={subtitle}
        formats={["avif", "webp"]}
        loading="lazy"
        inferSize={true}
      />
    </div>

    <div class="card-back">
      <p class="card-description-text">{description}</p>
    </div>
  </div>
</div>

<style>
  .card-container {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: 8px;
    perspective: 1000px;
  }

  .card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* ✅ Ajout: Active le mode 3D pour les enfants */
    transform-style: preserve-3d;
    /* La transition gère l'animation de la rotation */
    transition: transform 0.6s ease;
    display: flex; /* Gardé pour centrage si nécessaire */
    align-items: center;
    justify-content: center;
  }

  .card-front,
  .card-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-front {
    background: #f3f4f6;
    transform: rotateY(0deg); /* Face avant */
  }

  .card-front img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-back {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
    /* ✅ Correction: Place la face arrière à 180 degrés initialement, masquée */
    transform: rotateY(180deg);
    /* Retiré opacity: 0 et transform: scale(0.9) de l'ancien code */
  }

  .card-description-text {
    color: white;
    text-align: center;
    margin: 0;
    font-size: 14px;
    line-height: 1.6;
    padding: 50px;
  }
</style>
