---
// ============================================
// ADMIN LAYOUT
// ============================================
// Layout global pour toutes les pages d'administration
// Inclut : Header admin, Styles communs
// NOTE: La vérification d'auth doit être faite dans chaque page, pas ici

import { setCsrfToken } from '@/lib/auth';
import { Picture } from 'astro:assets';
import logo from '@/assets/logo.png';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Administration - Horizon Slavia' } = Astro.props;

// Générer un token CSRF pour le logout
const csrfToken = setCsrfToken(Astro.cookies);
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>{title}</title>
  <meta name="description" content={description}>
</head>
<body>
  <!-- Admin Header -->
  <header class="admin-header">
    <div class="header-content">
      <a href="/admin" class="logo-link">
        <Picture src={logo} alt="Horizon Slavia" formats={["avif", "webp"]} class="site-logo" />
      </a>
      <div class="header-right">
        <div class="user-info">
          <div class="avatar">LB</div>
          <span>Admin</span>
        </div>
        <a href="/admin/change-password" class="btn-change-password" title="Changer mon mot de passe">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M11 5V3.5C11 2.11929 9.88071 1 8.5 1C7.11929 1 6 2.11929 6 3.5V5M4.5 5H12.5C13.0523 5 13.5 5.44772 13.5 6V13C13.5 13.5523 13.0523 14 12.5 14H4.5C3.94772 14 3.5 13.5523 3.5 13V6C3.5 5.44772 3.94772 5 4.5 5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <button type="button" class="btn-logout" id="logoutBtn">Déconnexion</button>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="admin-main">
    <slot />
  </main>

  <!-- Global Admin Scripts -->
  <script define:vars={{ csrfToken }}>
    document.getElementById('logoutBtn')?.addEventListener('click', async () => {
      await fetch('/api/auth/logout', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ csrfToken }),
      });
      window.location.href = '/admin/login';
    });
  </script>
</body>
</html>

<style lang="scss">
  @use '@styles/abstracts/variables' as *;
  @use '@styles/abstracts/mixins' as *;

  // ============================================
  // GLOBAL ADMIN STYLES
  // ============================================

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f5f6fa;
    min-height: 100vh;
  }

  // ============================================
  // ADMIN HEADER
  // ============================================

  .admin-header {
    background: $color-primary;
    color: $color-white;
    padding: 0 $spacing-8;
    box-shadow: $shadow-md;
    position: sticky;
    top: 0;
    z-index: $z-dropdown;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-height: 90px;
    padding: $spacing-3 0;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity $transition-base;

    &:hover {
      opacity: 0.85;
    }
  }

  .site-logo {
    height: 70px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: $spacing-4;
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: $spacing-3;
    font-size: $font-size-sm;
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: $radius-full;
    background: $color-secondary;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: $font-weight-semibold;
  }

  .btn-change-password {
    padding: $spacing-2;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: $color-white;
    border-radius: $radius-md;
    cursor: pointer;
    transition: all $transition-base;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;

    &:hover {
      background: rgba(255, 255, 255, 0.15);
    }
  }

  .btn-logout {
    padding: $spacing-2 $spacing-4;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: $color-white;
    border-radius: $radius-md;
    font-size: $font-size-sm;
    cursor: pointer;
    transition: all $transition-base;

    &:hover {
      background: rgba(255, 255, 255, 0.15);
    }
  }

  // ============================================
  // MAIN CONTENT
  // ============================================

  .admin-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: $spacing-10 $spacing-8;
  }

  // ============================================
  // RESPONSIVE
  // ============================================

  @include respond-to(md) {
    .admin-header {
      padding: 0 $spacing-6;
    }

    .admin-main {
      padding: $spacing-8 $spacing-6;
    }
  }

  @include respond-to(sm) {
    .header-content {
      min-height: 70px;
      padding: $spacing-2 0;
    }

    .site-logo {
      height: 50px;
      max-width: 150px;
    }

    .user-info span {
      display: none;
    }

    .admin-main {
      padding: $spacing-6 $spacing-4;
    }
  }
</style>
