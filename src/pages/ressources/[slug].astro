---
import { getCollection, render } from 'astro:content';
import RessourceLayout from '@layouts/RessourceLayout.astro';

export async function getStaticPaths() {
  const ressources = await getCollection('ressources');
  return ressources.map((ressource) => ({
    params: { slug: ressource.id.replace('.md', '') },
    props: { ressource },
  }));
}

const { ressource } = Astro.props;
const { Content } = await render(ressource);
---

<RessourceLayout
  title={ressource.data.title}
  description={ressource.data.description}
  pubDate={ressource.data.pubDate}
  heroImage={ressource.data.heroImage}
>
  <Content />
</RessourceLayout>
